<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.rucafe">

    <application
            android:allowBackup="true"
            android:icon="@drawable/baked_donut_recipe_featured"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".StoreOrdersActivity"
                  android:parentActivityName=".MainActivity">
        </activity>
        <activity android:name=".CurrentOrderActivity"
                  android:parentActivityName=".MainActivity">
        </activity>
        <activity android:name=".OrderingCoffeeActivity"
                  android:parentActivityName=".MainActivity">
        </activity>
        <activity android:name=".OrderingDonutsActivity"
                  android:parentActivityName=".MainActivity">
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>